<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot/js/**" />
    <Clean Include="wwwroot/js/**/*.js" />
  </ItemGroup>

  <Target Name="CompileUpdateScript"
          BeforeTargets="BeforeBuild"
          Inputs="wwwroot/ups/site.ups"
          Outputs="wwwroot/js/site.js">
    <Copy SourceFiles="wwwroot/ups/site.ups"
          DestinationFiles="wwwroot/js/site.js" />

    <ItemGroup>
      <Content Include="wwwroot/js/site.js" />
    </ItemGroup>
  </Target>

</Project>
